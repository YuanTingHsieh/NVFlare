{
  "format_version": 2,
  "executors": [
    {
      "tasks": ["config", "start"],
      "executor": {
        "path": "nvflare.app_common.xgb.XGBExecutor",
        "args": {
          "adaptor_component_id": "client_adaptor"
        }
      }
    }
  ],
  "task_result_filters": [],
  "task_data_filters": [],
  "components": [
    {
      "id": "client_adaptor",
      "path": "nvflare.app_common.xgb.adaptors.InProcessGrpcClientAdaptor",
      "args": {
        "early_stopping_rounds": 2,
        "data_loader_id": "data_loader",
        "use_gpus": false,
        "xgb_params": {
          "max_depth": 8,
          "eta": 0.1,
          "objective": "binary:logistic",
          "eval_metric": "auc",
          "tree_method": "hist",
          "nthread": 16
        }
      }
    },
    {
      "id": "data_loader",
      "path": "higgs_data_loader.HIGGSDataLoader",
      "args": {
        "data_split_filename": "/tmp/nvflare/xgboost_higgs_dataset/2_uniform/data_{SITE_NAME}.json"
      }
    }
  ]
}
